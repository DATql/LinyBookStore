                        {
                            <div class="price">
                                <del style="font-size:20px; margin-right:7px;">@Model.price.ToString("#,0₫", culture.NumberFormat)</del>
                                <span style="color: #d0021c; font-weight: 600;">@((Model.price - Model.Discount.discount_price).ToString("#,0₫", culture.NumberFormat))</span>
                                <span style="font-size:16px;" class="text-success">-@((((Model.price) /(Model.price))-((Model.price - Model.Discount.discount_price)/(Model.price))).ToString("0%"))</span>
                            </div>

                        }
                        else
                        {
                            <div class="price" style="color: #d0021c; font-weight: 600;">@Model.price.ToString("#,0₫", culture.NumberFormat)</div>
                        }

