@using LinyBookStore.Models
@using LinyBookStore.Common
@using PagedList.Mvc
@model Product
@{
    ViewBag.Title = Model.product_name;
    ViewBag.Image = Model.image;
    Layout = "~/Views/Shared/Main_Layout.cshtml";
    var relatedproduct = (List<LinyBookStore.Models.Product>)ViewBag.relatedproduct;
    var listImage = (List<LinyBookStore.Models.Product_Img>)ViewBag.ProductImage;
    var listComment = (List<LinyBookStore.Models.Comment>)ViewBag.ListComment;
    var listReplyComment = (List<LinyBookStore.Models.RelyComment>)ViewBag.ListReplyComment;
    var OrderComment = (List<LinyBookStore.Models.OrderDetail>)ViewBag.OrderComment;
    var pagerComment = (PagedList.PagedList<LinyBookStore.Models.Comment>)ViewBag.PagerComment;
    var culture = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    double onestar = 1; int c_onestar = 0; double truestar = 2; int c_truestar = 0;
    double threestar = 3; int c_threestar = 0; ; double fourstar = 4; int c_fourstar = 0;
    double fivestar = 5; int c_fivestar = 0; int totalrating = 0; double avg = 0;
    string avgStar = "";
    foreach (var item in listComment)
    {
        if (item.product_id == Model.product_id)
        {
            foreach (var orderitem in OrderComment)
            {
                if (orderitem.product_id == item.product_id && item.product_id == Model.product_id && orderitem.Order.status == "3")
                {
                    totalrating++;
                    if (item.rate == 1)
                    {
                        c_onestar++;
                    }
                    if (item.rate == 2)
                    {
                        c_truestar++;
                    }
                    if (item.rate == 3)
                    {
                        c_threestar++;
                    }
                    if (item.rate == 4)
                    {
                        c_fourstar++;
                    }
                    if (item.rate == 5)
                    {
                        c_fivestar++;
                    }
                }
            }
        }
    }
    avg = (onestar * c_onestar / totalrating) + (truestar * c_truestar / totalrating) + (threestar * c_threestar / totalrating) +
    (fourstar * c_fourstar / totalrating) + (fivestar * c_fivestar / totalrating);
    if (avg >= 1 && avg < 2)
    {
        avgStar = "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>";
    }
    else if ((avg >= 2) && (avg < 3))
    {
        avgStar = "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>";
    }
    else if ((avg >= 3) && (avg < 4))
    {
        avgStar = "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>";
    }
    else if ((avg >= 4) && (avg < 5))
    {
        avgStar = "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>";
    }
    else if (avg == 5)
    {
        avgStar = "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='fill'><i class='ion-android-star'></i></li>" +
               "<li class='fill'><i class='ion-android-star'></i></li>";
    }
    else
    {
        avgStar = "<li class='empty'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>" +
               "<li class='empty'><i class='ion-android-star'></i></li>";
    }
