
@{
    ViewBag.Title = "Footer_Layout";
}
<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" /><!-- /Added by HTTrack -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="Sách siêu rẻ" />
    <meta name="description" content="Sách chính hangc">
    <meta property="og:type" content="article" />
    <meta property="og:image:height" content="500px" />
    <meta property="og:image" content="@ViewBag.Image" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- ::::::::::::::Favicon icon::::::::::::::-->
    <link rel="shortcut icon" href="~/Content/Images/logo/favicon.png" type="image/png" />
    <link rel="stylesheet" href="~/Content/UserCSS/vendor/vendor.min.css" />
    <link rel="stylesheet" href="~/Content/UserCSS/plugins/plugins.min.css" />
    <link href="~/Content/UserCSS/style.css" rel="stylesheet" />
    <!-- Google Fonts Roboto -->
    <!-- Font Awesome CDN -->
    <script src="https://use.fontawesome.com/576ffb49bd.js"></script>
</head>
<body>
    <!-- Start Footer Section -->
    <footer class="footer-section footer-bg section-top-gap-100">
        <div class="footer-wrapper">
            <!-- Start Footer Top -->
            <div class="footer-top">
                <div class="container">
                    <div class="row mb-n6">
                        <div class="col-lg-3 col-sm-6 mb-6">
                            <!-- Start Footer Single Item -->
                            <div class="footer-widget-single-item footer-widget-color--golden"
                                 data-aos="fade-up"
                                 data-aos-delay="0">
                                <h5 class="title">THÔNG TIN</h5>
                                <ul class="footer-nav">
                                    <li><a href="contact-us.html">Liên Hệ</a></li>
                                    <li><a href="#">Quay Lại</a></li>
                                </ul>
                            </div>
                            <!-- End Footer Single Item -->
                        </div>
                        <div class="col-lg-3 col-sm-6 mb-6">
                            <!-- Start Footer Single Item -->
                            <div class="footer-widget-single-item footer-widget-color--golden"
                                 data-aos="fade-up"
                                 data-aos-delay="200">
                                <h5 class="title">TÀI KHOẢN</h5>
                                <ul class="footer-nav">
                                    <li><a href="@Url.Action("Editprofile","Account")">Tài Khoản Của Tôi</a></li>
                                    <li><a href="@Url.Action("TrackingOrder","Account")">Lịch sử mua hàng</a></li>
                                    <li><a href="#">Sổ địa chỉ</a></li>
                                    <li><a href="@Url.Action("ChangePassword","Account")">Đổi mật khẩu</a></li>
                                </ul>
                            </div>
                            <!-- End Footer Single Item -->
                        </div>
                        <div class="col-lg-3 col-sm-6 mb-6">
                            <!-- Start Footer Single Item -->
                            <div class="footer-widget-single-item footer-widget-color--golden"
                                 data-aos="fade-up"
                                 data-aos-delay="400">
                                <h5 class="title">DANH MỤC</h5>
                                <ul class="footer-nav">
                                    <li><a href="@Url.Action("Book","Product")">Sách</a></li>
                                </ul>
                            </div>
                            <!-- End Footer Single Item -->
                        </div>
                        <div class="col-lg-3 col-sm-6 mb-6">
                            <!-- Start Footer Single Item -->
                            <div class="footer-widget-single-item footer-widget-color--golden"
                                 data-aos="fade-up"
                                 data-aos-delay="600">
                                <h5 class="title">THÔNG TIN VỀ CHÚNG TÔI</h5>
                                <div class="footer-about">                                  
                                    <address class="address">
                                        <span>Địa chỉ: 371 Nguyễn Kiệm, Phường 3, Quận Gò Vấp, TP.HCM</span>
                                        <span>Email: admin@gmail.com</span>
                                    </address>
                                </div>
                            </div>
                            <!-- End Footer Single Item -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Footer Top -->
            <!-- Start Footer Center -->
            <div class="footer-center">
                <div class="container">
                    <div class="row mb-n6">
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-6">
                            <div class="footer-social"
                                 data-aos="fade-up"
                                 data-aos-delay="0">
                                <h4 class="title">Theo Dõi Chúng Tôi</h4>
                                <ul class="footer-social-link">
                                    <li>
                                        <a href="#"><i class="fa fa-facebook"></i></a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-twitter"></i></a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-instagram"></i></a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-linkedin"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-xl-7 col-lg-6 col-md-6 mb-6">
                            <div class="footer-newsletter"
                                 data-aos="fade-up"
                                 data-aos-delay="200">
                                <h4 class="title">ĐỪNG BỎ LỠ SẢN PHẨM MỚI NHẤT</h4>
                                <div class="form-newsletter">
                                    <form action="#" method="post">
                                        <div class="form-fild-newsletter-single-item input-color--golden">
                                            <input type="email"
                                                   placeholder="Địa chỉ Email của bạn..."
                                                   required />
                                            <button type="submit">SUBSCRIBE!</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Start Footer Center -->
            <!-- Start Footer Bottom -->
            <div class="footer-bottom">
                <div class="container">
                    <div class="row justify-content-between align-items-center align-items-center flex-column flex-md-row mb-n6">
                        <div class="col-auto mb-6">
                            <div class="footer-copyright">
                                <p class="copyright-text">
                                    Copy Right &copy; 2023 By <a href="(@Url.Action("Index","Home"))">LinyBookStore</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Start Footer Bottom -->
        </div>
    </footer>
    <!-- End Footer Section -->
    <!-- ::::::::::::::All JS Files here :::::::::::::: -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/UserJS/vendor/vendor.min.js"></script>
    <script src="~/Scripts/UserJS/plugins/plugins.min.js"></script>
    <script src="~/Scripts/UserJS/cookie.js"></script>
    <script src="~/Scripts/UserJS/common.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Latest compiled JavaScript -->
    <!-- Main JS -->
    <script src="~/Scripts/UserJS/main.js"></script>
</body>
</html>